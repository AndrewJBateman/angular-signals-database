{
  "name": "angular-signals-database",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:ci": "ng test --no-watch --no-progress --browsers=ChromeHeadlessCI",
    "lint": "ng lint",
    "format": "prettier --write --config .prettierrc \"src/**/*.{js,ts,html,json}",
    "dev:ssr": "ng run angular-signals-database:serve-ssr",
    "serve:ssr": "node dist/angular-signals-database/server/main.js",
    "copy:files": "node ./scripts/copyFiles.js",
    "build:ssr": "ng build && ng run angular-signals-database:server:production",
    "prerender": "ng run angular-signals-database:prerender"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.0.7",
    "@angular/cdk": "^16.2.8",
    "@angular/common": "^17.0.7",
    "@angular/compiler": "^17.0.7",
    "@angular/core": "^17.0.7",
    "@angular/forms": "^17.0.7",
    "@angular/material": "^16.2.8",
    "@angular/platform-browser": "^17.0.7",
    "@angular/platform-browser-dynamic": "^17.0.7",
    "@angular/platform-server": "^17.0.7",
    "@angular/router": "^17.0.7",
    "@angular/ssr": "^17.0.7",
    "@netlify/functions": "^2.3.0",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "rxjs": "~7.8.1",
    "serverless-http": "^3.2.0",
    "tslib": "^2.6.2",
    "zone.js": "~0.14.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.7",
    "@angular-eslint/builder": "16.2.0",
    "@angular-eslint/eslint-plugin": "16.2.0",
    "@angular-eslint/eslint-plugin-template": "16.2.0",
    "@angular-eslint/schematics": "16.2.0",
    "@angular-eslint/template-parser": "16.2.0",
    "@angular/cli": "~17.0.7",
    "@angular/compiler-cli": "^17.0.7",
    "@types/express": "^4.17.19",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.8.4",
    "@typescript-eslint/eslint-plugin": "6.7.5",
    "@typescript-eslint/parser": "6.7.5",
    "eslint": "^8.51.0",
    "jasmine-core": "~5.1.1",
    "karma": "~6.4.2",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "prettier": "^3.0.3",
    "typescript": "~5.2.2"
  }
